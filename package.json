{
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "serve:client": "yarn --cwd ./packages/client serve",
        "build:client": "yarn --cwd ./packages/client build",
        "test:client": "yarn --cwd ./packages/client test"
    },
    "eslintConfig": {
      "root": true,
      "env": {
        "node": true
      },
      "extends": [
        "plugin:vue/essential",
        "@vue/prettier"
      ],
      "rules": {},
      "parserOptions": {
        "parser": "babel-eslint"
      }
    },
    "postcss": {
      "plugins": {
        "autoprefixer": {}
      }
    },
    "browserslist": [
      "> 1%",
      "last 2 versions"
    ]
}
